<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.Views.MixedDataPages.FileInfoPage"
             xmlns:local="clr-namespace:App2.ViewModels.ZoomExtensions"
             BackgroundColor="{AppThemeBinding Light=White, Dark=Gray}"
             Title="{Binding FullName}"
             >
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="tlbDecrypt" Text ="Decrypt" Clicked="HandleDecrypt"/>
        <ToolbarItem  Text="Info" Clicked="HandleInfoClicked"/>

    </ContentPage.ToolbarItems>
    <ContentPage.Content>
            <local:PinchToZoomContainer x:Name="pinchFrame" >
                <local:PinchToZoomContainer.Content>
                    <Image 
                        x:Name="ImgMain"
                        Aspect="AspectFill"  
                        BackgroundColor="Red"
                        VerticalOptions="Center"/>
                </local:PinchToZoomContainer.Content>
            </local:PinchToZoomContainer>

        
     
    </ContentPage.Content>
</ContentPage>  